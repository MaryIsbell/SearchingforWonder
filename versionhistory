		<wp:is_sticky>0</wp:is_sticky>
						<wp:attachment_url><![CDATA[https://unewhaven.pressbooks.pub/app/uploads/sites/12/2024/12/1024px-Bank_pneumatic_tubes.jpg]]></wp:attachment_url>
											<wp:postmeta>
		<wp:meta_key><![CDATA[_wp_attached_file]]></wp:meta_key>
		<wp:meta_value><![CDATA[2024/12/1024px-Bank_pneumatic_tubes.jpg]]></wp:meta_value>
